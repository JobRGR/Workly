.contact
  width 260px
  border-radius 5px
  background-clip padding-box
  background-color #f9f9f9
  box-sizing border-box
  display inline-block
  padding-bottom 20px
  .link
    height: 12px
    background -webkit-radial-gradient(center,circle,#fff 40%,transparent 50%)
    background radial-gradient(circle at center,#fff 40%,transparent 50%)
    background-size 12px 12px
    margin-bottom 20px
    clear: both
  h1
    color #555
    font-family "Open Sans", sans-serif
    font-size 18px
    text-align center
    padding 20px 0
    font-weight bold
  a
    color #555
    display block
    font-family "Open Sans", sans-serif
    font-size 16px
    padding-left 60px
    line-height 26px
    text-decoration underline
    cursor pointer
    overflow hidden

  for image_name in 'download' 'tel' 'post'
    .{image_name}:before
      content ''
      position absolute
      width: 20px
      height: 20px
      margin-left -35px
      margin-top 5px
      background url('/images/' + image_name + '.png') no-repeat