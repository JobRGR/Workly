.footer
  background-color rgb( 255, 255, 255 )
  width 100%
  height 100px
  background url(/images/green.png) left top repeat-x

.footer-box
  display table
  width 100%
  max-width 1100px
  margin auto
  & .footer_logo_img
      display table-cell
      vertical-align top
      height 100px
      width 100px
      & div
          display block
          background-color rgb( 255, 255, 255 )
          border-radius 50%
          width 92px
          height 92px
          margin 4px
  & .footer_bar
      display table-cell
      vertical-align top
      & .footer_email
          display block
          padding 0px 5px
          & p
              display inline-block
              font-size 16px
              font-family "OpenSans"
              color rgb( 255, 255, 255)
              height 40px
              line-height 40px
      & .footer_nav
          display block
          width 100%
          & .footer_nav-bar
              display table-cell
              width 100%
              & a
                  display inline-block
                  vertical-align middle
                  margin 0px 5px
                  font normal 16px "OpenSans"
                  color rgb( 86, 86, 86 )
                  height 60px
                  line-height 60px
          & .footer_logo_text
              display table-cell
              white-space nowrap
              vertical-align middle
              & span
                  color rgb( 116, 174, 128 )
              & a
                  font normal 18px "Pacifico"
                  color rgb( 86, 86, 86 )





