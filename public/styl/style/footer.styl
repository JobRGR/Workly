.footer
  background-color rgb( 255, 255, 255 )
  width 100%
  height 100px
  background url(/images/green.png) left top repeat-x
  clear both

.footer-box
  display table
  width 100%
  max-width 1100px
  margin auto
  font normal 16px "OpenSans"
  & .footer_logo_img
    display table-cell
    vertical-align top
    height 100px
    width 100px
    & div
      display block
      background-color rgb( 255, 255, 255 )
      border-radius 50%
      width 92px
      height 92px
      margin 4px
  & .footer_bar
    display table-cell
    vertical-align top
    & .footer_email
      display block
      box-sizing border-box
      vertical-align middle
      height 40px
      padding 5px 0px
      font normal 16px "OpenSans"
      color rgb( 255, 255, 255 )
      & .email-text
        font-weight bolder
        display inline-block
        height 20px
        margin-left 5px
        vertical-align middle
      & .email-link
        display inline-block
        height 20px
        vertical-align middle
        &::before
           display inline-block
           content ' '
           height 20px
           width 26px
           margin 0px 5px
           vertical-align middle
           background url('/images/email.png') center no-repeat
           background-size cover
  & .footer_nav
    display block
    width 100%
    & .footer_nav-bar
      display table-cell
      width 100%
      & a
        display inline-block
        vertical-align middle
        text-decoration none
        margin 0px 5px
        font normal 16px "OpenSans"
        color rgb( 86, 86, 86 )
        height 60px
        line-height 60px
    & .footer_logo_text
      display table-cell
      white-space nowrap
      vertical-align middle
      & a
        font normal 18px "Pacifico"
        text-decoration none
        color rgb( 86, 86, 86 )
      & .first_letter
        color rgb( 116, 174, 128 )
      & .logo_date
        font normal 16px "OpenSans"





