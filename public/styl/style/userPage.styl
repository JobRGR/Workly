.userPage_info_date
  white-space nowrap
  font normal 14px "OpenSans" !important
  padding-left 100px

.userPage
	width 100%
.userPage_logo
	left 135px
	top 50px
	position absolute
	z-index 10

.userPage_cards-wrapper
	padding-top 100px
	margin-left 200px
	position relative
.userPage_info
	width 600px
	display inline-block
	position relative
	padding-bottom 40px
	margin-bottom 80px
	background-color #f9f9f9
	border-radius 29px 5px 5px
	float left
	z-index 1
.userPage_info_userInfo
	margin-left 40px
	margin-top 40px
	padding-bottom 20px

.userPage_info_userInfo-image
	display inline
	float left
	img
		border-radius 100%
		max-width 100px
		max-height 100px
.userPage_info_userInfo-title
	font-family "Open Sans"
	font-size 24px
	color #74ae80
	vertical-align top
	margin-left 15px
	display inline
.userPage_tiangle
	width 0
	height 0
	border-top: 30px solid #fff
	border-right 30px solid #6dc780
	z-index 2
	position absolute

.userPage_info_userInfo_about
	clear both
	display inline-block
	margin-left 30px
.userPage_info_userInfo_about_status
	font-family "Open Sans"
	font-size 10px
	color #6dc780
.userPage_info_userInfo_about_name
	font-family "Open Sans"
	font-size 29px
	color #565656
	font-weight bold
	padding 10px 0
.userPage_info_userInfo_about_job
	font-family "Open Sans"
	font-size 14px
	color #565656

.userPage_info_userInfo_details
	clear both
	display inline-block
	padding-left 40px
	font-family "Open Sans"
	font-size 12px
	color #565656
	div
		padding-bottom 5px

.userPage_info_userInfo_details_place:before,.userPage_info_userInfo_details_age:before,
.userPage_info_userInfo_details_num:before,.userPage_info_userInfo_details_mail:before
	background url('/images/socialIcons.png') no-repeat
	content ''
	display inline-block
	position absolute
.userPage_info_userInfo_details_place:before
	background-position: -0px -0px
	width 14px
	height 11px
	margin-left -25px
.userPage_info_userInfo_details_age:before
	background-position -0px -35px
	width 11px
	height 14px
	margin-left -23px
.userPage_info_userInfo_details_num:before
	background-position -0px -11px
	width 14px
	height 15px
	margin-left -25px
.userPage_info_userInfo_details_mail:before
	background-position -0px -26px
	width 14px
	height 9px
	margin-top 3px
	margin-left -25px
.userPage_info_userInfo_about_wrapper
	display inline-block
.userPage_circles
	height 12px
	background radial-gradient(circle at center, rgba(255,255,255,1) 40%,transparent 50%) repeat
	background-size 12px 12px
	margin-left -45px
	margin-top 40px
	clear both

.userPage_info_userInfo_bio
  	margin-top 40px
.userPage_info_userInfo_bio_block
	padding-right 35px
	line-height 16px
	padding-bottom 10px
	h1
		font-family "Open Sans"
		font-size 16px
		display table-cell
		width 100px
		font-weight bold
		padding-right 20px
		text-align center
	span
		font-family "Open Sans"
		font-size 14px
		color #565656
		line-height 20px
		display table-cell
	h2
		font-family "Open Sans"
		font-size 14px
		color #565656
		font-weight bold
		padding 10px 0
