.my-vacancy
  width 100%
  &-banner
    height 350px
    background-size cover
    width 100%
    box-sizing border-box
    background-image url('/images/my-vacancy.jpg')
  &-content
    box-sizing border-box
    background-color rgba(0,0,0, 0.65)
    height 100%
    h1
      line-height 350px
      font-size 60px
      text-align center
      color #fff
      font-family "PT Sans Caption", sans-serif
  &-list
    width 75%
    margin 0 auto
    padding 50px
    box-sizing border-box
    h1
      font-size 24px
      color #8C8B8B
      font-family sans-serif
      text-align center
      font-weight: 100
      line-height 30px
    .feed-a
      color: #74ae80
      text-align center
      font-family sans-serif
      line-height 30px
      font-size 18px
      display block
    &-logo
      float right
      position relative
      top 10px
    &-title
      display block
      color #73ad7f
      font-family "PT Sans Caption", sans-serif
      font-size 24px
      margin-bottom 7px
    &-inf
      color #555
      font-family "Open Sans", sans-serif
      font-size 14px
      display block
      margin-bottom 20px
      span
        padding 0 10px
      a
        text-decoration none
        padding-right 10px
      a:hover
        text-decoration underline
    &-about
      color #555
      display block
      line-height 24px
      font-family "Open Sans", sans-serif
      font-size 14px
      max-width 60%
  &-item
    margin-top 30px
    display block
    cursor pointer
    box-sizing border-box
    padding 30px 40px
    border-top 1px #fff solid
    border-left 1px #fff solid
    border-right 1px #fff solid
    border-bottom 1px #74ad7f solid
    &:hover
      border 1px #74ad7f solid
      background-color rgba(220,249,218,.2)
    &:first-child
      margin-top 5px
  &-props
    float right
    position: relative
    transform: translateX(200%)
    margin-top: 10px
    a
      display block
      margin-bottom 20px
      width: 39px
      height: 39px
      border #74ad7f solid 1px
      border-radius: 40px
      cursor pointer
      &:hover
        background-color rgba(220,249,218,.2)
    for image_name in 'edit' 'inf' 'trash'
      .{image_name}
        content ''
        background url('/images/props/' + image_name + '.png') no-repeat
        background-position 50% 50%