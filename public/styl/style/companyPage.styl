.companyPage
	width 100%
.companyPage_logo
	left 135px
	top 50px
	position absolute
	z-index 10

.companyPage_cards-wrapper
	padding-top 100px
	margin-left 200px
	position relative
.compamyPage_info-card
	width 526px
	display inline-block
	position relative
	padding-bottom 40px
	margin-bottom 80px
	background-color #f9f9f9
	border-radius 29px 5px 5px
	float left
	z-index 1
.compamyPage_info-card_profile
	margin-left 50px
	margin-top 30px
	padding-bottom 45px

.compamyPage_info-card_profile-image
	display flex
	flex-direction column
	justify-content center
	float left
	text-align center
	width 190px
	height 80px
.compamyPage_info-card_profile-title
	font-family "Open Sans"
	font-size 30px
	font-weight bold
	color #565656
	display inline
	vertical-align top
	margin-left 15px
	display inline
.compamyPage_info-card_profile-contacts
	display inline-block
	font-family "Open Sans"
	font-size 12px
	color #565656
	margin-left 25px
	margin-top 25px
.compamyPage_info-card_profile-contacts_adress,.compamyPage_info-card_profile-contacts_email,.compamyPage_info-card_profile-contacts_tel,.compamyPage_info-card_profile-contacts_website
	padding 5px 0px
	margin-left 15px
	a
		color #565656

.compamyPage_info-card_profile-contacts_email,.compamyPage_info-card_profile-contacts_tel,
.compamyPage_info-card_profile-contacts_website
	text-decoration: underline;

.compamyPage_info-card_profile-contacts_adress:before,.compamyPage_info-card_profile-contacts_email:before,
.compamyPage_info-card_profile-contacts_tel:before,.compamyPage_info-card_profile-contacts_website:before
	background url('/images/socialIcons.png') no-repeat
	content ''
	display inline-block
	position absolute
.compamyPage_info-card_profile-contacts_email:before
	background-position: -0px -0px
	width 14px 
	height 11px
	margin-left -25px
.compamyPage_info-card_profile-contacts_adress:before
	background-position -0px -35px
	width 11px
	height 14px
	margin-left -23px
.compamyPage_info-card_profile-contacts_tel:before
	background-position -0px -11px
	width 14px
	height 15px
	margin-left -25px
.compamyPage_info-card_profile-contacts_website:before
	background-position -0px -26px
	width 14px
	height 9px
	margin-top 3px
	margin-left -25px
.compamyPage_info-card_profile-button
	top 33px
	width 188px
	position relative
	height 23px
	border-radius 5px
	background-color #6dc780
	box-shadow 0 4px 1px #33b061
	margin-top -30px
	font-family "Open Sans"
	font-size 12px
	font-weight bold
	text-align center
	line-height 23px
	color #fff
	cursor pointer

.compamyPage_info-card_profile-none
	top 33px
	width 188px
	position relative
	height 23px
	margin-top -30px
	font-family "Open Sans"
	font-size 12px
	font-weight bold
	text-align center
	line-height 23px
	color #565656
	
.companyPage_tiangle
	width 0
	height 0
	border-top: 30px solid #fff
	border-right 30px solid #6dc780
	z-index 2
	position absolute

.compamyPage_circles
	height 12px
	background radial-gradient(circle at center, rgba(255,255,255,1) 40%,transparent 50%) repeat
	background-size 12px 12px
	margin-left -5px
.compamyPage_info-card_info
	font-family "Open Sans"
	color #565656
	margin 20px 50px 0px
	line-height 22px
	h1
		font-size 18px
		font-weight bold
		padding-bottom 10px

.compamyPage_vacancy-card
	width 361px
	border-radius 5px
	background-color #f9f9f9
	display inline-block
	margin-left 25px
	padding-bottom 20px
.compamyPage_vacancy-card_title
	margin-left 23px
	margin-top 23px
	font-family "Open Sans"
	font-size 18px
	color #565656
	font-weight bold

.compamyPage_vacancy-card_list_item
	margin 10px 0 20px 23px
	a
		font-family "Open Sans"
		font-family "Open Sans"
		font-size 14px
		text-decoration underline
		color #74ae80
	span
		font-family OpenSans
		font-size 12px
		font-style italic
		color #565656
