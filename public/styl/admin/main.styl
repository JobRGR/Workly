body
  overflow-x hidden

.nav-tabs
    li
      cursor pointer
    .active
      cursor default !important

.control-line
  position relative
  margin-top 30px
  margin-bottom 30px

.glyphicon-remove, .glyphicon-pencil, .glyphicon-home
   cursor pointer

.glyphicon-pencil
  margin-right 7px

.glyphicon-home
  margin-right 7px

.glyphicon-pencil:hover
    color #0000ff

.glyphicon-remove:hover
  color #ff0000

.glyphicon-home:hover
  color #1ec000

.drop-model-btn,
.add-model-btn
  margin-right: 15px

.btn-div
  float right
  width auto

.sign-label
  padding-bottom 8px

.logout
  margin-left 5px
  cursor pointer

.model-list
  padding-bottom 35px

.edit
  &-bg
    width 100%
    height 100%
    background rgba(0,0,0, 0.4)
    position absolute
    top 0px
    left 0px
    z-index 1000
    min-height 680px
  &-div
    box-shadow 0 1px 3px rgba(0,0,0,.44), inset 0 2px 0
    width: 50%
    height 100%
    position absolute
    top: -2px
    padding-left 50px
    padding-right 50px
    right 0px
    padding-top 20px
    background #fff
    z-index 1000
    min-height 680px
    overflow-y scroll
    overflow-x hidden
    padding-bottom 40px
  &-close
    font-size 25px
    &-small
      font-size 18px
  .alert
    margin-top 70px
  .cursor
    cursor pointer
  &-change-password
    margin-top 65px
    position relative

.competence
  &-list
    margin-top 25px
    position relative
  &-search
    margin-top 20px

.cms
  &-list
    margin-top 60px
    position relative

.pull-right
  a
    padding-left 10px

.test-btn
  margin-bottom 40px

@media (max-width: 1000px)
  .btn-div
    width 355px

@media (max-width: 767px)
  .btn-div
    float none
    margin-top 20px
